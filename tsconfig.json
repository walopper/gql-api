{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "target": "es2018",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "paths": {
            "@shared/*": ["src/shared/*"],
            "@domain/*": ["src/domain/*"],
            "@utils/*": ["src/utils/*"],
            "@config/*": ["src/config/*"],
            "@/*": ["src*"]
        }
    },
    "exclude": ["node_modules", "dist"]
}
